# ===========================================
# HubLab - Environment Variables
# ===========================================

# -----------------------
# Supabase Configuration (REQUIRED)
# -----------------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# -----------------------
# Application URLs (REQUIRED)
# -----------------------
# Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Production (when deploying)
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXT_PUBLIC_SITE_URL=https://your-domain.com

# -----------------------
# Ambient Agent CRM - HubSpot OAuth (OPTIONAL for quick test)
# -----------------------
# Get these from: https://developers.hubspot.com/
# Create a new app under "Apps" > "Create app"
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:3000/api/crm/hubspot/callback

# Production HubSpot (when deploying)
# HUBSPOT_REDIRECT_URI=https://your-domain.com/api/crm/hubspot/callback

# -----------------------
# Stripe Configuration (OPTIONAL - for payments)
# -----------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# -----------------------
# Resend Configuration (OPTIONAL - for email notifications)
# -----------------------
RESEND_API_KEY=your_resend_api_key

# -----------------------
# Future CRM Integrations
# -----------------------
